
@{
    ViewData["Title"] = "BasicHtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BasicHtml</h1>
@*employee- employeeid,firstname,lastname
    email,contact,dob,gender,technology,experience
    submit(btn),reset(btn)*@
<div>
    <label for="employeeid">EmployeeId</label>
    <input type="number" id="employeeid" name="employeeid" />
</div>
<div>
    <label for="firstname">Firstname</label>
    <input type="text" id="firstname" name="firstname" />
</div>
<div>
    <label for="lastname">Lastname</label>
    <input type="text" id="lastname" name="lastname" />
</div>
<div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" />
</div>
<div>
    <label for="contact">Contact</label>
    <input type="number" id="contact" name="contact" />
</div>
<div>
    <label for="dob">Date of Birth</label>
    <input type="date" id="dob" name="dob" />
</div>
<div>
    <label for="gender">Gender</label>
    <input type="radio" id="rdbmale" name="gender" value="M" />Male
    <input type="radio" id="rdbfemale" name="gender" value="F" />FeMale
</div>
<div>
    <label>Technology</label>
    <input type="checkbox" id="chkhtml" name="chktechnology" value="HTML" />HTML
    <input type="checkbox" id="chkcss" name="chktechnology" value="CSS" />CSS
    <input type="checkbox" id="chkjs" name="chktechnology" value="JS" />Javascript
</div>

<div>
    <label>Experience</label>
    <select>
        <option value="1">Fresher</option>
        <option value="2">0-1</option>
        <option value="3">1-3</option>
        <option value="4">3-Above</option>
    </select>
</div>
<div>
    <input type="submit" value="Save" name="save" />
    <input type="reset" value="Reset" name="reset" />

</div>


