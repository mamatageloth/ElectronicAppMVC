
@{
    ViewData["Title"] = "BasicHtmlBS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BasicHtml Designed by Bootstrap form classes</h1>
@*employee- employeeid,firstname,lastname
    email,contact,dob,gender,technology,experience
    submit(btn),reset(btn)*@
<form action="" method="post">
    <div class="form-group">
        <label for="employeeid" class="control-label">EmployeeId</label>
        <input type="number" id="employeeid" name="employeeid" class="form-control" onblur="checkEmpid()"/>
        <span id="errorEmpid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="firstname" class="control-label">Firstname</label>
        <input type="text" id="firstname" name="firstname" class="form-control" onblur="checkEmpFN()" />
        <span id="errorEmpfn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="lastname" class="control-label">Lastname</label>
        <input type="text" id="lastname" name="lastname" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email" class="control-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="contact" class="control-label">Contact</label>
        <input type="number" id="contact" name="contact" class="form-control" />
    </div>
    <div class="form-group">
        <label for="dob" class="control-label">Date of Birth</label>
        <input type="date" id="dob" name="dob" class="form-control" />
    </div>
    <div class="form-group">
        <label for="gender" class="control-label">Gender</label>
        <input type="radio" id="rdbmale" name="gender" value="M" />Male
        <input type="radio" id="rdbfemale" name="gender" value="F" />FeMale
    </div>
    <div class="form-group">
        <label class="control-label">Technology</label>
        <input type="checkbox" id="chkhtml" name="chktechnology" value="HTML" />HTML
        <input type="checkbox" id="chkcss" name="chktechnology" value="CSS" />CSS
        <input type="checkbox" id="chkjs" name="chktechnology" value="JS" />Javascript
    </div>

    <div class="form-group">
        <label class="control-label">Experience</label>
        <select class="form-control">
            <option value="1">Fresher</option>
            <option value="2">0-1</option>
            <option value="3">1-3</option>
            <option value="4">3-Above</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" name="save" />
        <input type="reset" value="Reset" name="reset" />

    </div>
</form>
<script>
    //client side validation
    function checkEmpid() {
        var empid = document.getElementById("employeeid").value;
        if (empid == "") {
            document.getElementById("errorEmpid").innerHTML = "employee id field is empty";
        } else {
            document.getElementById("errorEmpid").innerHTML = "";
        } 
    }
    function checkEmpFN() {
        var empfn = document.getElementById("firstname").value;
        if (empfn == "") {
            document.getElementById("errorEmpfn").innerHTML = "employee firstname field is empty";
        } else {
            document.getElementById("errorEmpfn").innerHTML = "";
        } 
    }
</script>


