
@{
    ViewData["Title"] = "BasicHtmlBSLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .maindiv {
        border: 1px solid orange;
        border-radius: 10px;
        padding: 20px;
        background-color: #586a7a29;
    }
</style>
<h1>BasicHtml Designed by Bootstrap form classes and grid classes</h1>
@*employee- employeeid,firstname,lastname
    email,contact,dob,gender,technology,experience
    submit(btn),reset(btn)*@
<div class="maindiv">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="employeeid" class="control-label text-info">EmployeeId</label>
                <input type="number" id="employeeid" name="employeeid" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="firstname" class="control-label text-info">Firstname</label>
                <input type="text" id="firstname" name="firstname" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="lastname" class="control-label text-info">Lastname</label>
                <input type="text" id="lastname" name="lastname" class="form-control" />
            </div>
        </div>

    </div>@* row1*@
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="email" class="control-label text-info">Email</label>
                <input type="email" id="email" name="email" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="contact" class="control-label text-info">Contact</label>
                <input type="number" id="contact" name="contact" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="dob" class="control-label text-info">Date of Birth</label>
                <input type="date" id="dob" name="dob" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="gender" class="control-label text-info">Gender</label>
                <br />
                <input type="radio" id="rdbmale" name="gender" value="M" />Male
                <input type="radio" id="rdbfemale" name="gender" value="F" />FeMale
            </div>
        </div>
    </div>@*row2*@

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label text-info">Technology</label>
                <br />
                <input type="checkbox" id="chkhtml" name="chktechnology" value="HTML" />HTML
                <input type="checkbox" id="chkcss" name="chktechnology" value="CSS" />CSS
                <input type="checkbox" id="chkjs" name="chktechnology" value="JS" />Javascript
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label text-info">Experience</label>
                <select class="form-control">
                    <option value="1">Fresher</option>
                    <option value="2">0-1</option>
                    <option value="3">1-3</option>
                    <option value="4">3-Above</option>
                </select>
            </div>
        </div>
    </div> @*row3*@

    <div class="form-group">
        <label class="control-label">Upload File</label>
        <input type="file" id="files" name="files" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <input type="submit" value="Save" name="save" class="btn btn-success" />
        </div>
        <div class="col-md-6 text-center">
            <input type="reset" value="Reset" name="reset" class="btn btn-danger" />
        </div>
    </div>
</div>
    


