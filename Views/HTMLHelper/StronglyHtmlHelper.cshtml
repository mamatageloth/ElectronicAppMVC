@model ElectronicsAppMVC.Models.Employee
@{
    ViewData["Title"] = "StronglyHtmlHelper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>StronglyHtmlHelper</h1>
<form>
    <div class="form-group">
        @Html.LabelFor(model => model.employeeId, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.employeeId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.employeeFName, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.employeeFName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.employeeLName, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.employeeLName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.employeeEmail, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.employeeEmail, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.employeeAddress, new { @class = "control-label" })
        @Html.TextAreaFor(model => model.employeeAddress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.employeepassword, new { @class = "control-label" })
        @Html.PasswordFor(model => model.employeepassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Technology, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Technology, new SelectList(Enum.GetValues(typeof(Technology))), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Department, new { @class = "control-label" })
        @Html.ListBoxFor(model => model.Department, new SelectList(Enum.GetValues(typeof(Department))), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save"/>
        <input type="reset" class="btn btn-danger" value="Cancel"/>
    </div>
</form>

